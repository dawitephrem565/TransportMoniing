<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   >



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="መነሻ"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:paddingLeft="82dp"
            android:textSize="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="መድረሻ"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:paddingLeft="120dp"
            android:textSize="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        android:id="@+id/textboxrow"
        android:layout_below="@+id/textrow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <AutoCompleteTextView
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/BusAutostartET"
            android:layout_marginLeft="5dp"
            />
        <AutoCompleteTextView
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/BusAutoEndET"
            android:layout_marginLeft="10dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="420dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:id="@+id/arearow"
        android:layout_below="@id/textboxrow"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="የቦታው መስመር ቁጥር"
            android:layout_marginTop="25dp"
            android:textColor="@color/colorAccent"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="የቦታው ታሪፍ መጠን"
            android:paddingTop="20dp"
            android:textColor="@color/colorAccent"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="የቦታው መነሻ ልዩ ስም"
            android:textColor="@color/colorAccent"
            android:paddingTop="20dp"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="የቦታው መድረሻ ልዩ ስም"
            android:textColor="@color/colorAccent"
            android:paddingTop="20dp"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ኪሎሜትር ርቀት"
            android:paddingTop="20dp"
            android:textColor="@color/colorAccent"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/textboxrow"
        >
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginBottom="20dp"
            android:text="አሳይ"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/Bshowbtn"

            android:background="@color/colorAccent"



            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="400dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/arearow"
        android:layout_below="@+id/textboxrow"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:id="@+id/Bnumber"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:id="@+id/Bprice"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:id="@+id/Bstarting"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:id="@+id/Bending"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textAlignment="center"
            android:id="@+id/Bkm"
            android:paddingTop="20dp"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            />

    </LinearLayout>

</RelativeLayout>
