<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.dev.transportmoniing.sampleDB">

    <TextView
        android:id="@+id/licensetexttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:paddingLeft="10dp"
        android:text="እባክሆን  የመኪናውን ታርጋ ያስገቡ"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"

        android:textSize="16dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:id="@+id/licencePlate"


        />

    <TextView
        android:id="@+id/phonetv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorAccent"

        android:textSize="16dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:id="@+id/adress"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ምን እንርዳዎ ?"

        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HI "
        android:paddingLeft="10dp"
        android:id="@+id/alagbab_mestnaged"
        android:layout_marginTop="5dp"/>

    <CheckBox
        android:id="@+id/tariifTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="የታሪፍ ማጭበርበር " />

    <CheckBox
        android:id="@+id/fetnetTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="ፍጥነት መጨመር" />

    <CheckBox
        android:id="@+id/tttoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="ጠጥቶ ማሽከርከር" />

    <CheckBox
        android:id="@+id/adgaTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="በቅርብ ያለአደጋ" />

    <TextView
        android:id="@+id/loed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/lad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_marginTop="15dp"
        android:text="ሪፖርት"
        android:id="@+id/report"

        android:background="@color/colorAccent"

        />


</LinearLayout>
</android.support.v4.widget.NestedScrollView>